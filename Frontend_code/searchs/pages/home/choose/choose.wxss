/* searchs/pages/home/choose/choose.wxss */
.topTap {
  position: fixed;
  width: 750rpx;
  height: 77rpx;
  background: #FFFFFF;
  box-shadow: 0px 6rpx 12rpx 2rpx rgba(0, 0, 0, 0.16);
  border-radius: 0px 0px 19rpx 19rpx;
  opacity: 1;
  border: 1rpx solid #707070;
  z-index: 100;
}

.tap {
  display: inline-flex;
  justify-content: space-around;
  align-items: center;
  position: relative;
  width: 375rpx;
  height: 77rpx;
}

.tap.active {
  color: #07C160;
}

.active::after {
  content: "";
  width: 100rpx;
  height: 0px;
  opacity: 1;
  border: 2rpx solid #07C160;
  background-color: #07C160;
  position: fixed;
  top: 64rpx;
}

.detail {
  position: relative;
  top: 77rpx;
  width: 750rpx;
  height: 138rpx;
  background: white;
  border: solid rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 33rpx;
  font-weight: 500;
  color: #181818;
}